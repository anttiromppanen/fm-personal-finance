generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Transaction {
  id        Int      @id
  amount    Float
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id String @unique
}
